@model BugTracker.Models.AdminUserViewModel

@{
    ViewBag.Title = "EditUser";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Assign Roles to: </h4>
                        <h2 class="category">@Model.Name</h2>
                    </div>
                    <div class="content">
                        @using (Html.BeginForm("EditUser", "Admin", FormMethod.Post))
            {
                            @Html.AntiForgeryToken()

                                <div class="form-group">
                                    <div id="chosen-select">
                                        @Html.ListBox("SelectedRoles", Model.Roles, htmlAttributes: new { @class = "chosen-select", @style = "width:200px;" })
                                    </div>
                                </div>
                            <div class="form-group">
                                    <input type="submit" value="Assign" class="btn btn-default btn-sm" />
                            </div>
                            <div class="clearfix"></div>                        }
                        @*<div class="footer">
                            <div class="legend">
                                <i class="fa fa-circle text-info"></i> Open
                                <i class="fa fa-circle text-danger"></i> Bounce
                                <i class="fa fa-circle text-warning"></i> Unsubscribe
                            </div>*@
                        <hr>
                        @*<div class="stats">
                                    <i class="fa fa-clock-o"></i> Campaign sent 2 days ago
                                </div>
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

           

