        <div class="section section-features page-scroll" id="demo">
            <div class="container">
                <h4 class="header-text text-center">Take a tour</h4>
                <p class="text-center">Check out what Aardvark has to offer. Click below to be logged in as one of four types of users:</p><br />
                @*<p class="text-center">Adminstrator | Project Manager | Developer | Submitter</p>*@
                <div class="row">
                    <div class="col-md-3">
                        <div class="card card-blue">
                            <div class="icon">
                                <i class="fa fa-clipboard fa-3x"></i>
                            </div>
                            <div class="text">
                                <h4>Administrator</h4>
                                <p>Assign user roles. View and manage all projects and tickets. Assign users to projects and tickets</p>
                                @using (Html.BeginForm("DemoLogin", "Account", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                                    <input type="hidden" name="email" value="@Model.AdminEmail" />
                                    <input type="hidden" name="password" value="@Model.AdminPassword" />
                                    <button class="btn btn-default" type="submit">Admin</button>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card card-blue">
